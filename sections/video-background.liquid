
{%- style -%}
  .{{section.id }}{
    padding-top: {{ section.settings.padding_top  }}rem;
    display:flex;
    align-items:center;
    justify-content: center;
  }
  .{{ section.id }}.page-width{
    max-width:  var(--page-width);
  }
  .video-section {
    position: relative;
    width: 95%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    display:flex;
    align-items:center;
    justify-content:center;
    overflow: hidden;
    border-radius: 4rem;
    margin: 0px auto;
  }
  @media screen and (min-width:960px){
    .{{section.id }}{
      padding-bottom: {{ section.settings.padding_bottom  }}rem;
    }
      .video-section{
        width:100%;
      }
  }
  .video-section video{
    width: 100%;
    height: 100%;
    object-fit:cover;
  }


.video-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
  color: #fff;
  height: 100vh;
}

{%- endstyle -%}
<div class="{{section.id }} gradient color-inverse page-width">
  <div class="video-section ">
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
    {% else %}
      <div class="video-placeholder">
        <p>No video provided. Please upload a video in the settings.</p>
      </div>
    {% endif %}
    <div class="video-overlay">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Background Video",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.video.settings.video.label"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay Video",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "rem",
      "label": "t:sections.all.padding.padding_top",
      "default": 2
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "rem",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 2
    }
  ],
  "presets": [
    {
      "name": "Background Video Section",

    }
  ]
}
{% endschema %}