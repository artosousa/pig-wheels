{% assign block_count = section.blocks | size %}
{% assign flex_percent = 100 | divided_by: block_count %}

{%- style -%}
  .image-block-section {
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      ;
    }
  
    .image-block-wrapper {
      display: flex;
      flex-direction: column;
      width: 100%;
      gap: 4rem;
    }

    .image-block {
      flex: 1 1 100%;
      aspect-ratio: 1;
      background-size: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      text-decoration: none;
      color: white;
      transition: background-size 0.25s ease; /* Smooth transition */
      background-position: center;
      border-radius: 4rem;
      overflow: hidden;
    }
    .image-block:hover{
      background-size: 110%;
      
    }
    .image-block:after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .image-block .content {
      position: absolute;
      z-index: 2;
      text-align: center;
    }

    .image-block .link-label {
      font-size: 2.5rem;
      margin-top: 0.5rem;
      display: block;
    }
  @media screen and (min-width: 770px){
    .image-block-section {
      flex-direction: row;
    }
    .image-block{
      flex: 1 1 {{ flex_percent }}%;
    }
    .image-block-wrapper {
      flex-direction: row;
    }
  }
{%- endstyle -%}

<section class="{{section.id}} image-block-section page-width gradient page-inverse">
  <div class="image-block-wrapper">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link_url }}" class="image-block" style="background-image: url('{{ block.settings.image | img_url: '800x800' }}');">
        <div class="content">
          <span class="link-label">{{ block.settings.link_label }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
  
</section>

{% schema %}
{
  "name": "Image Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Image Blocks"
    }
  ]
}
{% endschema %}
